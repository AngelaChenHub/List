<h1 class="container">Two Degrees</h1>
<div class="container">
	<%= form_for @task, :remote => true, :format => :json do |f| %>
	<div class="control-group">

		<%= f.label :Name %>
		<%= f.text_field :title , :class => 'form-control' %>
		<%= f.label :Email_address %>
		<%= f.text_field :email_address, :class => 'form-control' %>
		<%= f.label :Description %>
		<%= f.text_field :description, :class => 'form-control', :size => 150 %>
	</div>
</br>
<%= f.submit 'Add Contact', :class => "btn btn-success"  %>
<% end %>
</div>
</br>
<div class="container">
	<div class="form-body">
		<div id="tasks"></div>
	</div>
</div>
