<div class="panel panel-info">
  <!-- Default panel contents -->
  <div class="panel-heading">Contacts</div>
  <div class="panel-body">

<table class="table table-hover">
  <thead>
    <td style="width:200px"><Strong>Name</strong></td>
    <td style="width:200px"><Strong>Email Address</strong></td>
    <td style="width:500px"><Strong>Description</strong></td>

  </thead>

  <% if @tasks.any? %>
  <% @tasks.each do |task| %>
<!--   <% if task.archived != 1 %> -->
  <tr>

    <td style="width:200px; height: 50px"><%=task.title%></td>
    <td style="width:200px"><%=task.email_address%></td>
    <td style="width:200px"><%=task.description%></td>

    <td>
      <button class="btn btn-info select" data-id="<%=task.id%>"> Select </button>
    </td>

    <% end %>
    <% end %>
    <% end %>
  </tr>
</table>
  </div>

